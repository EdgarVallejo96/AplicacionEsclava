<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_Titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Pantalla de Inicio" />

    <Button
        android:id="@+id/b_Aplicaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="abrir_aplicaciones"
        android:text="Mostrar Aplicaciones" />

    <Button
        android:id="@+id/b_Paginas_Web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="abrir_navegador_web"
        android:text="Mostrar Navegador Web" />
</LinearLayout>